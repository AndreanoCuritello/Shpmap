<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top">
<LinearLayout
    android:gravity="center|bottom"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:layout_gravity="center_horizontal|top"
    android:orientation="horizontal"
    android:id="@+id/layout_list" 
    android:weightSum="6"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textColor="@drawable/list_text_selector"
    android:background="@drawable/list_layout_selector">    
      <TextView
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="fill_parent"
        android:id="@+id/ListViewText"
        android:gravity="center_vertical"
        android:textSize="@dimen/listTextSize"
        android:hint="введите название.." 
        android:singleLine="true" 
        android:minEms="24"
        android:maxEms="24"/>
      <RadioButton 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/listRadioButton"
        android:button="@null"
        android:background="@drawable/map_list_marker_selector" />
      </LinearLayout>
 <LinearLayout
    android:gravity="center|bottom"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:layout_gravity="center_horizontal|top"
    android:orientation="horizontal"
    android:visibility="gone"
    android:id="@+id/layout_edit_list"
    android:weightSum="6"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">    
      <EditText
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/ListEditText"
        android:textSize="@dimen/listTextSize"
        android:singleLine="true" 
        android:hint="введите название.." 
        android:minEms="24"
        android:maxEms="24"
        android:focusableInTouchMode="true"><requestFocus />
        </EditText>


   <Button
      
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/accept_button_selector"
        android:id="@+id/ListOkButton"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"/>  
    <Button
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:background="@drawable/delete_button_selector"
        android:id="@+id/ListDeleteButton"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"/>
    </LinearLayout>
</RelativeLayout>